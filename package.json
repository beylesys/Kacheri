{
  "name": "beyle-kacheri",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev:api": "npm --prefix \"./KACHERI BACKEND\" run dev",
    "dev:ws": "cross-env YPERSISTENCE=./data/yjs npx y-websocket",
    "dev:web": "npm --prefix \"./KACHERI FRONTEND\" run dev",
