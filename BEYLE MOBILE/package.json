  "private": true,
  "scripts": {
    "build:web": "cd \"../KACHERI FRONTEND\" && npm run build",
    "inject:config": "node scripts/inject-config.js",
    "inject:config:prod": "node scripts/inject-config.js https://api.beyle.app",
    "cap:sync": "npx cap sync",
    "cap:run:android": "npx cap run android",
