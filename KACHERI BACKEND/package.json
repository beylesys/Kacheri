{
  "name": "kacheri-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:api": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:yjs": "ts-node-dev --respawn --transpile-only src/realtime/yjsStandalone.ts",
    "dev": "concurrently -n api,yjs -c auto \"npm run dev:api\" \"npm run dev:yjs\"",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "start": "node dist/server.js",
    "migrate": "ts-node scripts/migrate.ts run",
    "migrate:status": "ts-node scripts/migrate.ts status",
    "migrate:up": "ts-node scripts/migrate.ts up",
    "migrate:down": "ts-node scripts/migrate.ts down",
    "migrate:create": "ts-node scripts/migrate.ts create",
    "migrate:proofs": "ts-node scripts/migrations/add_proofs_columns.ts",
    "migrate:artifacts": "ts-node ./scripts/migrations/create_artifacts_table.ts",
    "migrate:auth": "ts-node ./scripts/migrations/create_auth_tables.ts",
    "verify:nightly": "ts-node ./scripts/nightly_verify.ts",
    "backfill:storage-keys": "ts-node ./scripts/backfill_storage_keys.ts",
    "verify:storage-integrity": "ts-node ./scripts/verify_storage_integrity.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/multipart": "^9.3.0",
    "@fastify/rate-limit": "^10.3.0",
    "@napi-rs/canvas": "^0.1.82",
    "@y/websocket-server": "^0.1.1",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "ffmpeg-static": "^5.3.0",
    "html-to-docx": "^1.8.0",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "level": "^10.0.0",
    "mammoth": "^1.11.0",
    "nanoid": "^3.3.11",
    "nodemailer": "^8.0.1",
    "openai": "^6.7.0",
    "pdf-parse": "^1.1.4",
    "pdfjs-dist": "^5.4.394",
    "pg": "^8.19.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "pptxgenjs": "^4.0.1",
    "prom-client": "^15.1.3",
    "puppeteer": "^24.25.0",
    "skia-canvas": "^3.0.8",
    "tesseract.js": "^6.0.1",
    "ws": "^8.18.3",
    "y-leveldb": "^0.2.0",
    "yjs": "^13.6.28",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^24.9.1",
    "@types/nodemailer": "^7.0.10",
    "@types/pg": "^8.16.0",
    "@types/ws": "^8.18.1",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
